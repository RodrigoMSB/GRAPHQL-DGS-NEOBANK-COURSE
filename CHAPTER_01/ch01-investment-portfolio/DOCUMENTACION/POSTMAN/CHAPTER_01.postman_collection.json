				{
					"name": "1.2.3a - Mutation: createPortfolio",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Mutation success is true\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.data.createPortfolio.success).to.be.true;",
									"});",
									"",
									"pm.test(\"Created portfolio has an ID\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.data.createPortfolio.portfolio.id).to.exist;",
									"    ",
									"    // Save the ID for next request",
									"    pm.environment.set(\"CREATED_PORTFOLIO_ID\", jsonData.data.createPortfolio.portfolio.id);",
									"});"
